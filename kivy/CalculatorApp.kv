<CustButton@Button>:
	font_size: 32


<CalcGridLayout>:
	id: calculator
	display: entry
	rows: 5
	padding: 10
	spacing: 10


	BoxLayout:
		TextInput:
			id: entry
			font_size: 32
			multiline: False
	
	BoxLayout:
		spacing: 10
		
	    CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "7"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "8"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "9"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.1, 0.4, 1)
			text: "+"
			on_press: entry.text += self.text
    BoxLayout:
		spacing: 10
		
	    CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "4"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "5"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "6"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.1, 0.4, 1)
			text: "-"
			on_press: entry.text += self.text
    BoxLayout:
		spacing: 10
		
	    CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "1"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "2"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "3"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0, 0.1, 0.4, 1)
			text: "*"
			on_press: entry.text += self.text
    BoxLayout:
		spacing: 10
		
	    CustButton:
			background_color: (0.8, 0, 0, 1)
            text: "AC"
			on_press: entry.text = ""
		CustButton:
            background_color: (0, 0.6, 0, 1)
			text: "0"
			on_press: entry.text += self.text
		CustButton:
            background_color: (0.8, 0, 0, 1)
			text: "="
			on_press: calculator.calculate(entry.text)
		CustButton:
            background_color: (0, 0.1, 0.4, 1)
			text: "/"
			on_press: entry.text += self.text

        